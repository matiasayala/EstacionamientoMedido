@page "/Prelogin"
@page "/"

@inject NavigationManager NavigationManager

<section class="d-flex align-items-center my-5 mt-lg-6 mb-lg-5">
    <div class="container">
        <div class="row justify-content-center form-bg-image">
            <div class="col-12 d-flex align-items-center justify-content-center" style="height:565px;">
                <div class="bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                    <div class="text-center text-md-center mb-5 mt-md-0">
                        <h1 class="mb-0 h3">Sistema de Estacionamiento Medidio</h1>
                    </div>
                    <button type="submit" @onclick="GoLogin" class="btn btn-primary btn-block mb-3">Ingresar a mi cuenta</button>
                    <button type="submit" @onclick="GoInfracciones" class="btn btn-primary btn-block">No estoy registrado</button>
                    <div class="d-flex justify-content-between align-items-top my-3">
                        <div><a href="Unauthorized" class="small text-right">Registrarse</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {

    private void GoLogin()
    {
        NavigationManager.NavigateTo("login");
    }
    private void GoInfracciones()
    {
        NavigationManager.NavigateTo("infracciones");
    }

}
