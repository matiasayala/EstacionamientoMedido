<h4 class="d-flex justify-content-between align-items-center mb-3">
    <span class="text-primary">Ubicacion</span>
</h4>
<div class="card mb-0 shadow-sm" style="padding: 0.5rem 1rem;">
    <div class="list-group-item d-flex justify-content-between lh-sm">
        <div>
            <h6 class="my-2">Ubicacion Libre</h6>
            <ButtonComponent class="btn btn-info btn-block" OnClick="IntentarReservar">Reservar</ButtonComponent>
        </div>
    </div>
</div>


@code {

    private async Task IntentarReservar()
    {
        await Task.Delay(2500);
        await JsRuntime.MensajeAtencion("Ocurrio un error al reservar la ubicacion. Comuniquese con Yair.");
    }
}