<h4 class="d-flex justify-content-between align-items-center mb-3">
    <span class="text-primary">Ubicacion Libre</span>
</h4>
<div class="card mb-0 shadow-sm" style="padding: 0.5rem 1rem;">
    <div class="list-group-item justify-content-between lh-sm">
        <div>
            <h6 class="my-2">Acciones</h6>
            <ButtonComponent class="btn btn-info btn-block2" OnClick="IntentarReservar">Reservar</ButtonComponent>
            <ButtonComponent class="btn btn-warning btn-block2 my-2" OnClick="NotificarProblema">Notificar un problema</ButtonComponent>
        </div>
    </div>
</div>


@code {

    private async Task IntentarReservar()
    {
        await Task.Delay(2000);
        await JsRuntime.MensajeAtencion("Ocurrio un error al reservar la ubicacion. Comuniquese con Yair.");
    }
    private async Task NotificarProblema()
    {
        await Task.Delay(1500);
        await JsRuntime.MensajeToast("Se notificara a Yair sobre el problema.");
        await Task.Delay(3200);
        await JsRuntime.MensajeOK();
    }
}