<h4 class="d-flex justify-content-between align-items-center mb-3">
    <span class="text-primary">Comercio</span>
</h4>
<div class="card mb-0 shadow-sm" style="padding: 0.5rem 1rem;">
    <div class="list-group-item d-flex justify-content-between lh-sm">
        <div>
            <h6 class="my-0">Nombre</h6>
            <medium class="text-muted">@comercio.Nombre</medium>
        </div>
    </div>
    <div class="list-group-item d-flex justify-content-between lh-sm">
        <div>
            <h6 class="my-0">Rubro</h6>
            <medium class="text-muted">@comercio.Rubro</medium>
        </div>
    </div>
    <div class="list-group-item d-flex justify-content-between lh-sm">
        <div>
            <h6 class="my-0">Direccion</h6>
            <medium class="text-muted">@comercio.Direccion</medium>
        </div>
    </div>
    <div class="list-group-item d-flex justify-content-between lh-sm">
        <div>
            <h6 class="my-0">Horario</h6>
            <medium class="text-muted">@comercio.HorarioAtencion</medium>
        </div>
    </div>
</div>


@code {
    [Parameter] public Comercio comercio {get; set; }

}
